  title: "Model Town Simulator",
  description: "Interactive driving simulator based on NTSA guidelines",
}

export default function RootLayout({
  children,
}: {
  children: React.ReactNode
}) {
  return (
    <html lang="en">
      <body className={inter.className}>{children}</body>
    </html>
  )
}
